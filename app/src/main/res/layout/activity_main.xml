<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_list_recyclerview"
            android:layout_width="377dp"
            android:layout_height="500dp"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
            android:id="@+id/add_item_category"
            android:layout_width="151dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:background="#007BC5FF"
            android:text="Add Category"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/background_light"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/item_list_recyclerview"
            android:layout_marginTop="15dp"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:id="@+id/add_item_to_category_layout"
            android:background="@drawable/add_item"
            android:orientation="horizontal"
            android:visibility="gone">

        <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="500dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:background="#46BDFD"
                android:id="@+id/cancel_add_item"
                android:layout_marginStart="30dp"/>
        <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="235dp"
                android:background="#46BDFD"
                android:text="Okay"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_marginStart="235dp"
                android:id="@+id/add_item_confirmation"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="430dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#46BDFD"
                android:background="@drawable/customborder"
                android:hint="$2.50"
                android:textColorHint="#A1DEFF"
                android:id="@+id/add_item_address"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="390dp"
                android:text="Price:"
                android:textColor="#46BDFD"
                android:textSize="24sp"
                />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="300dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#46BDFD"
                android:background="@drawable/customborder"
                android:hint="Avocado"
                android:textColorHint="#A1DEFF"
                android:id="@+id/add_item_name"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="260dp"
                android:text="Ingredient name:"
                android:textColor="#46BDFD"
                android:textSize="24sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="26dp"
                android:text="Add Ingredient"
                android:textColor="#46BDFD"
                android:textSize="34sp"
                android:textStyle="bold"

                />
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:id="@+id/add_item_category_layout"
            android:background="@drawable/add_item"
            android:orientation="horizontal"
            android:visibility="gone">

        <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="500dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:background="#46BDFD"
                android:id="@+id/cancel_add_category"
                android:layout_marginStart="30dp"/>
        <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="500dp"
                android:layout_marginLeft="235dp"
                android:background="#46BDFD"
                android:text="Okay"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_marginStart="235dp"
                android:id="@+id/add_category_confirm"/>
        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="430dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#46BDFD"
                android:background="@drawable/customborder"
                android:hint="$2.25"
                android:textColorHint="#A1DEFF"
                android:id="@+id/add_item_of_category_price"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="390dp"
                android:text="Price:"
                android:textColor="#46BDFD"
                android:textSize="24sp"
                />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="300dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#46BDFD"
                android:background="@drawable/customborder"
                android:hint="Small Fries"
                android:textColorHint="#A1DEFF"
                android:id="@+id/add_item_of_category_name"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="260dp"
                android:text="Item name:"
                android:textColor="#46BDFD"
                android:textSize="24sp"
                />

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="170dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#46BDFD"
                android:background="@drawable/customborder"
                android:hint="Sides"
                android:textColorHint="#A1DEFF"
                android:id="@+id/add_category_name"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="131dp"
                android:text="Category name:"
                android:textColor="#46BDFD"
                android:textSize="24sp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="26dp"
                android:text="Add Category"
                android:textColor="#46BDFD"
                android:textSize="34sp"
                android:textStyle="bold"

                />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>