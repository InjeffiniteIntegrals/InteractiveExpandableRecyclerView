<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_background"
        android:id="@+id/category_row_layout">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:id="@+id/expand_collapse_button"
            android:background="@drawable/dropdown_arrow"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/category_view_background"
            android:background="@android:color/transparent"
            android:padding="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <TextView
            android:layout_width="238dp"
            android:layout_height="32dp"
            android:text="item category"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#46BDFD"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/item_category_textview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>

    <Button
            android:layout_width="39dp"
            android:layout_height="40dp"
            android:id="@+id/add_item_to_category_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/plus"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="52dp"/>

    <Button
            android:layout_width="39dp" android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:id="@+id/select_all_items_button"
            android:background="@drawable/select_all"/>





</androidx.constraintlayout.widget.ConstraintLayout>